{
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ]
}
